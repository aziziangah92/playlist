<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTT Playlist Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h1 class="text-2xl font-bold text-center mb-6">OTT Playlist Manager</h1>
        <div id="passwordForm">
            <input type="password" id="passwordInput" class="w-full p-2 border rounded mb-4" placeholder="Enter password">
            <button onclick="checkPassword()" class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600">Submit</button>
        </div>
        <div id="playlistForm" class="hidden">
            <input type="url" id="playlistLinkInput" class="w-full p-2 border rounded mb-4" placeholder="Enter your OTT playlist link">
            <button onclick="addPlaylist()" class="w-full bg-green-500 text-white p-2 rounded hover:bg-green-600">Add Playlist</button>
        </div>
        <div id="playlistLinks" class="mt-6 hidden">
            <h2 class="text-xl font-semibold mb-4">Your Playlists</h2>
            <ul id="playlistList" class="list-disc pl-5"></ul>
        </div>
        <p id="errorMessage" class="text-red-500 text-center mt-4 hidden">Incorrect password. Please try again.</p>
        <p id="linkErrorMessage" class="text-red-500 text-center mt-4 hidden">Please enter a valid URL.</p>
    </div>

    <script>
        const correctPassword = "mySecurePassword123"; // Ganti dengan kata sandi yang diinginkan
        let playlists = [];

        function checkPassword() {
            const input = document.getElementById("passwordInput").value;
            const passwordForm = document.getElementById("passwordForm");
            const playlistForm = document.getElementById("playlistForm");
            const errorMessage = document.getElementById("errorMessage");

            if (input === correctPassword) {
                passwordForm.classList.add("hidden");
                playlistForm.classList.remove("hidden");
                errorMessage.classList.add("hidden");
            } else {
                errorMessage.classList.remove("hidden");
                document.getElementById("passwordInput").value = "";
            }
        }

        function addPlaylist() {
            const linkInput = document.getElementById("playlistLinkInput").value;
            const linkErrorMessage = document.getElementById("linkErrorMessage");
            const playlistLinks = document.getElementById("playlistLinks");
            const playlistList = document.getElementById("playlistList");

            // Validasi URL
            try {
                new URL(linkInput);
                playlists.push(linkInput);
                updatePlaylistList();
                playlistLinks.classList.remove("hidden");
                linkErrorMessage.classList.add("hidden");
                document.getElementById("playlistLinkInput").value = "";
            } catch {
                linkErrorMessage.classList.remove("hidden");
                document.getElementById("playlistLinkInput").value = "";
            }
        }

        function updatePlaylistList() {
            const playlistList = document.getElementById("playlistList");
            playlistList.innerHTML = "";
            playlists.forEach((link, index) => {
                const li = document.createElement("li");
                li.innerHTML = `<a href="${link}" class="text-blue-500 hover:underline">Playlist ${index + 1}</a>`;
                playlistList.appendChild(li);
            });
        }

        // Allow Enter key to submit password
        document.getElementById("passwordInput").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                checkPassword();
            }
        });

        // Allow Enter key to submit playlist link
        document.getElementById("playlistLinkInput").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                addPlaylist();
            }
        });
    </script>
</body>
</html>

